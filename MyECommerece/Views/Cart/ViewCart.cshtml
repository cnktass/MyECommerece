@using MyECommerece.Models
@model List<CartItem>

<h1>Your Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th> </th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Product.PhotoPath" class="card-img-top" alt="@item.Product.Name" style="height: 60px; object-fit: cover;"></td>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
