@model MyECommerece.Models.Invoice

<h1>Invoice</h1>
<p><strong>Invoice Date:</strong> @Model.InvoiceDate.ToShortDateString()</p>
<p><strong>Billing Address:</strong> @Model.BillingAddress</p>
<p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
<p><strong>Total Amount:</strong> $@Model.TotalAmount</p>

<h2>Order Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
