@model MyECommerece.Models.Invoice

<h1>Invoice</h1>
<p><strong>Full Name:</strong> @Model.Order.ApplicationUser.FullName</p>
<p><strong>Invoice Date:</strong> @Model.InvoiceDate.ToShortDateString()</p>
<p><strong>Billing Address:</strong> @Model.BillingAddress</p>
<p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
<p><strong>Total Amount:</strong> $@Model.TotalAmount</p>

<h3>Seller Information</h3>
@if (ViewBag.Seller != null)
{
    <p><strong>Seller Name:</strong> @ViewBag.Seller.FullName</p>
    <p><strong>Company Name:</strong> @ViewBag.Seller.CompanyName</p>
    <p><strong>Tax Number:</strong> @ViewBag.Seller.TaxNumber</p>
    <p><strong>Trade Registry Number:</strong> @ViewBag.Seller.TradeRegistryNumber</p>
    <p><strong>Mersis Number:</strong> @ViewBag.Seller.MersisNumber</p>
}
else
{
    <p><em>Seller information not available.</em></p>
}

<h2>Order Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
